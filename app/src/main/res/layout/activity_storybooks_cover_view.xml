<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_columnSpan="1"
    android:layout_columnWeight="1"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/storyBookCoverImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/grace_in_space_39e5eb1614ea195e9e377f63f561aa8c"
            android:contentDescription="Grace in Space" />

        <TextView
            android:id="@+id/storyBookCoverTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/storyBookCoverImageView"
            android:background="#FFFFFF"
            android:text="Grace in Space"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ellipsize="end"
            android:maxLines="1" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
